{
	"name": "create-harper",
	"description": "Scaffold a new Harper project in JavaScript or TypeScript.",
	"version": "0.12.3",
	"type": "module",
	"author": {
		"name": "HarperDB",
		"email": "support@harperdb.io"
	},
	"bin": {
		"create-harper": "index.js",
		"cha": "index.js"
	},
	"files": [
		"index.js",
		"lib/",
		"!lib/**/*.test.js",
		"template-react/",
		"template-react-ts/",
		"template-vanilla/",
		"template-vanilla-ts/"
	],
	"scripts": {
		"commitlint": "commitlint --edit",
		"format:check": "dprint check",
		"format:fix": "dprint fmt",
		"format:staged": "dprint check --staged --allow-no-files",
		"lint:check": "oxlint .",
		"lint:fix": "oxlint . --fix",
		"prepare": "husky",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"templates:apply-shared-templates": "(cd templates-shared && node ./applySharedTemplates.js)",
		"templates:build-studio-templates": "(cd templates-studio && node ./buildStudioTemplates.js)",
		"templates:publish-studio-templates": "(cd templates-studio && node ./publishStudioTemplates.js)"
	},
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"repository": "github:HarperFast/create-harper",
	"bugs": {
		"url": "https://github.com/harperfast/create-harper/issues"
	},
	"homepage": "https://github.com/harperfast",
	"dependencies": {
		"@clack/prompts": "^1.0.0-alpha.9",
		"@vercel/detect-agent": "^1.0.0",
		"cross-spawn": "^7.0.6",
		"mri": "^1.2.0",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.1",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@vitest/coverage-v8": "^4.0.17",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"dprint": "^0.51.1",
		"husky": "^9.1.7",
		"oxlint": "^1.38.0",
		"semantic-release": "^25.0.2",
		"vitest": "^4.0.17"
	}
}
